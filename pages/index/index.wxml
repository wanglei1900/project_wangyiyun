<!--index.wxml-->
<view class="indexContainer">
  <!-- 轮播图 -->
  <swiper class="banners" indicator-dots 	indicator-color="#d1d8e0" 	indicator-active-color="#2d98da" 	circular>
    <swiper-item wx:for="{{banners}}" wx:for-item="bannerItem" wx:key="bannerId">
      <image src="{{bannerItem.pic}}"></image>
    </swiper-item>
  </swiper>

  <!-- 五个图标导航区域 -->
  <view class="navContainer">
    <view class="navItem">
        <!-- 小程序会计算空白节点 -->
        <text class="iconfont icon-xihuan"></text>
        <text class="font-sise:26rpx">每日推荐</text>
    </view>
    <view class="navItem">
        <text class="iconfont icon-yinle"></text>
        <text>其他页面</text>
    </view>
    <view class="navItem">
        <text class="iconfont icon-sort"></text>
        <text>排行榜</text>
    </view>
    <view class="navItem">
        <text class="iconfont icon-diepian1"></text>
        <text>电台</text>
    </view>
    <view class="navItem">
        <text class="iconfont icon-shexiangtou"></text>
        <text>直播</text>
    </view>
  </view>

  <!-- 推荐歌曲 -->
  <view class="recommentdContainer">
    <!-- 头部区 -->
      <view class="header">
        <view class="title">推荐歌曲</view>
        <view class="nav">
          <text>为你精心推荐</text>
          <text class="more">查看更多</text>
        </view>
      </view>
    <!-- 内容推荐区 -->
    <scroll-view class="recommentdSrroll" enable-flex scroll-x>
      <view class="scrollItem"  wx:for="{{recommendList}}" wx:for-item="recommend" wx:key="id">
        <image src="{{recommend.picUrl}}"></image>
        <text>{{recommend.name}}</text>
      </view>
    </scroll-view>
  </view>
</view>