/* 视频页 */
.videoContainer .header{
    display: flex;
    padding: 10rpx;
}
.videoContainer .header image{
    height: 60rpx;
    width: 60rpx;
}
.videoContainer .header .search{
    border: 1px solid #eee;
    text-align: center;
    /* 
    flex-grow:可拉伸 0 flex-shrink:可压缩 1 flex-basis:当前元素的宽度  auto

    flex:1 ---意味着lex-grow:1; flex-shrink:1; flex-basis:0%
    父元素宽度自动成为100%
    flex:auto ---意味着lex-grow:1; flex-shrink:1; flex-basis:auto
    */
    flex: 1;
    margin: 0 20rpx;
    text-align: center;
    color: #2d98da;
    font-size: 26rpx;
    line-height: 60rpx;
}

/* 导航区 */
.navContainer{
    display: flex;
    height: 60rpx;
    /* 默认不允许换行，单行 */
    white-space: nowrap; 
}
.navContainer .navcontent{
    padding: 0 20rpx;
    line-height: 60rpx;

    height: 60rpx;
}
.navcontent .navItem{
    font-size: 28rpx;
    box-sizing: border-box;
    height: 60rpx;
}
.active{
    border-bottom: 1rpx solid #2d98da;
}

